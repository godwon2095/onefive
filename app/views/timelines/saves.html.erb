<% @posts.each do |p| %>
<a href="<%= post_path(p) %>">
  <div class="row">
      <div class="col s12 m7">
        <div class="card">
          <div class="card-image">
            <% if p.image.present? %>
              <%= image_tag(p.image) %>
            <% else %>
              <img src="/onefive.png">
            <% end %>
            <span class="card-title indigo-text text-darken-4"><%= p.title %></span>
          </div>
          <div class="card-content">
            <p class="indigo-text text-darken-4"><b><%= p.subtitle %></b><br><br>
            <%= p.content.html_safe %></p>
          </div>
          <div class="card-action">
            <span class="black-text"><i class="material-icons">bookmark</i><%= p.likes.size %></span>
            <span class="black-text"><i class="material-icons">sms</i><%= p.comments.size %></span>
            <%= link_to "#{p.user.name}", profile_timeline_path(p.user), class: "right indigo-text text-darken-4" %>
          </div>
        </div>
      </div>
  </div>
</a>
<% end %>
  <%= will_paginate @posts %>
