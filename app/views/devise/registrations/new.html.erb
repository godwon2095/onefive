  <h2>회원가입</h2>

  <%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email, '이메일' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>


    <div class="field">
      <%= f.label :identity, '아이디' %><br />
      <%= f.text_field :identity, autofocus: false, autocomplete: "off" %>
      <%= link_to  do %>
        <button>중복체크</button>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :name, '이름' %><br />
      <%= f.text_field :name, autofocus: false, autocomplete: "off" %>
    </div>
    
    <div class="field">
      <%= f.label :information, '한 줄' %><br />
      <%= f.text_area :information %>
    </div>

    <div class="field">
      <%= f.label :password, '비밀번호' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, '비밀번호 확인' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :thumbnail, '프로필 이미지' %><br />
      <%= f.file_field :thumbnail %>
    </div><br>


    <div class="actions">
      <%= f.submit "가입완료" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>